            }
            else
            {
                @foreach (var fila in datos2)
                {
                    <div class="border rounded p-3 mb-3">
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Id:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("id")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Nombre:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("nombre")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Código:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("codigo")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Objetivo:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("objetivo")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Fórmula:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("formula")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Meta:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("meta")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Representación Visual:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("representacionVisual")</div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <!-- ======================== Sección 3 ======================== -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-warning text-dark">
            <strong>3. Indicadores + Responsables (Actor) + Tipo Actor</strong>
        </div>
        <div class="card-body">
            @if (datos3 is null)
            {
                <div class="text-center py-3">
                    <div class="spinner-border text-warning" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                </div>
            }
            else if (!datos3.Any())
            {
                <div class="alert alert-warning mb-0">No hay datos en consulta 3.</div>
            }
            else
            {
                @foreach (var fila in datos3)
                {
                    <div class="border rounded p-3 mb-3">
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Id:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("id")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Nombre:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("nombre")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Código:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("codigo")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Objetivo:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("objetivo")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Fórmula:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("formula")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Meta:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("meta")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Responsable:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("responsable")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Tipo Actor:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("tipoActor")</div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <!-- ======================== Sección 4 ======================== -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-info text-white">
            <strong>4. Indicadores + Fuentes</strong>
        </div>
        <div class="card-body">
            @if (datos4 is null)
            {
                <div class="text-center py-3">
                    <div class="spinner-border text-info" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                </div>
            }
            else if (!datos4.Any())
            {
                <div class="alert alert-warning mb-0">No hay datos en consulta 4.</div>
            }
            else
            {
                @foreach (var fila in datos4)
                {
                    <div class="border rounded p-3 mb-3">
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Id:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("id")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Nombre:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("nombre")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Código:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("codigo")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Objetivo:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("objetivo")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Fórmula:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("formula")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Meta:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("meta")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Fuente:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("fuente")</div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <!-- ======================== Sección 5 ======================== -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-secondary text-white">
            <strong>5. Indicadores + Variables + Dato + FechaDato</strong>
        </div>
        <div class="card-body">
            @if (datos5 is null)
            {
                <div class="text-center py-3">
                    <div class="spinner-border text-secondary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                </div>
            }
            else if (!datos5.Any())
            {
                <div class="alert alert-warning mb-0">No hay datos en consulta 5.</div>
            }
            else
            {
                @foreach (var fila in datos5)
                {
                    <div class="border rounded p-3 mb-3">
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Id:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("id")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Nombre:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("nombre")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Código:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("codigo")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Objetivo:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("objetivo")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Fórmula:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("formula")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Meta:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("meta")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Variable:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("variable")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Dato:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("dato")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Fecha Dato:</label>
                            <div class="col-sm-9">
                                @{
                                    var rawFecha = fila.GetValueOrDefault("fechadato")?.ToString();
                                    if (!string.IsNullOrWhiteSpace(rawFecha) && DateTime.TryParse(rawFecha, out var dt))
                                    {
                                        @dt.ToString("yyyy-MM-dd")
                                    }
                                    else
                                    {
                                        @("-")
                                    }
                                }
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <!-- ======================== Sección 6 ======================== -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-dark text-white">
            <strong>6. Todos los campos de Indicador + ResultadoIndicador</strong>
        </div>
        <div class="card-body">
            @if (datos6 is null)
            {
                <div class="text-center py-3">
                    <div class="spinner-border text-dark" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                </div>
            }
            else if (!datos6.Any())
            {
                <div class="alert alert-warning mb-0">No hay datos en consulta 6.</div>
            }
            else
            {
                @foreach (var fila in datos6)
                {
                    <div class="border rounded p-3 mb-3">
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Id:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("id")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Código:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("codigo")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Nombre:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("nombre")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Objetivo:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("objetivo")</div>
                        </div>
                        <div class="row mb-2">
