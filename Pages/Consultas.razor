                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Fórmula:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("formula")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Meta:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("meta")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Id Resultado:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("idResultado")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Resultado:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("resultado")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Fecha Cálculo:</label>
                            <div class="col-sm-9">
                                @{
                                    var rawFechaCalc = fila.GetValueOrDefault("fechaCalculo")?.ToString();
                                    if (!string.IsNullOrWhiteSpace(rawFechaCalc) && DateTime.TryParse(rawFechaCalc, out var dt2))
                                    {
                                        @dt2.ToString("yyyy-MM-dd")
                                    }
                                    else
                                    {
                                        @("-")
                                    }
                                }
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

@code {
    private List<Dictionary<string, object>>? datos1;
    private List<Dictionary<string, object>>? datos2;
    private List<Dictionary<string, object>>? datos3;
    private List<Dictionary<string, object>>? datos4;
    private List<Dictionary<string, object>>? datos5;
    private List<Dictionary<string, object>>? datos6;

    protected override async Task OnInitializedAsync()
    {
        datos1 = await servicioEntidad.ObtenerConsulta1Async();
        datos2 = await servicioEntidad.ObtenerConsulta2Async();
        datos3 = await servicioEntidad.ObtenerConsulta3Async();
        datos4 = await servicioEntidad.ObtenerConsulta4Async();
        datos5 = await servicioEntidad.ObtenerConsulta5Async();
        datos6 = await servicioEntidad.ObtenerConsulta6Async();
    }
}