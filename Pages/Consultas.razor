@page "/consultas"
@using System.Collections.Generic
@using FrontBlazor.Services
@inject ServicioEntidad servicioEntidad

<div class="container mt-4">
    <h2 class="mb-3">Consultas SQL</h2>
    <p class="text-muted">A continuación verás los resultados de cada una de las seis consultas.</p>

    <!-- ======================== Sección 1 ======================== -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">
            <strong>1. Indicadores + TipoIndicador + UnidadMedición + Sentido</strong>
        </div>
        <div class="card-body">
            @if (datos1 is null)
            {
                <div class="text-center py-3">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                </div>
            }
            else if (!datos1.Any())
            {
                <div class="alert alert-warning mb-0">No hay datos en consulta 1.</div>
            }
            else
            {
                @foreach (var fila in datos1)
                {
                    <div class="border rounded p-3 mb-3">
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Id:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("id")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Código:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("codigo")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Nombre:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("nombre")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Objetivo:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("objetivo")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Alcance:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("alcance")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Fórmula:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("formula")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Tipo Indicador:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("tipoIndicador")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Unidad Medición:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("unidadMedicion")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Meta:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("meta")</div>
                        </div>
                        <div class="row mb-2">
                            <label class="col-sm-3 fw-bold">Sentido:</label>
                            <div class="col-sm-9">@fila.GetValueOrDefault("sentido")</div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

